<div class="confirmPage">
  <div class='container'>
    <h1 class="confirmPage_title">あなたの情報</h1>
    <%= form_with model: @inquiry, url: inquiries_thanks_path, method: :post, local: true do |f| %>
      <div class="confirmForm_item">
        <h3>あなたの名前</h3>
        <div>
          <%= f.hidden_field :name %>
          <%= @inquiry.name %>
        </div>
      </div>
      <div class="confirmForm_item">
        <h3>あなたのメールアドレス</h3>
        <div>
          <%= f.hidden_field :email %>
          <%= @inquiry.email %>
        </div>
      </div>
      <div class="confirmForm_item">
        <h3>あなたの学籍番号</h3>
        <div>
          <%= f.hidden_field :number %>
          <%= @inquiry.number %>
        </div>
      </div>
      <div class="confirmForm_item">
        <h3>希望コース</h3>
        <div>
          <%= f.hidden_field :cource %>
          <%= @inquiry.cource %>
        </div>
      </div>
      <div class="confirmForm_item">
        <h3>一番の興味分野</h3>
        <div>
          <%= f.hidden_field :interest %>
          <%= @inquiry.interest %>
        </div>
      </div>
      <div class="confirmForm_item">
        <h3>自己PR</h3>
        <div>
          <% if @inquiry.content.empty? %>
           特になし
          <% else %>
           <%= @inquiry.content %>
          <% end%>
          <%= f.hidden_field :content %>
        </div>
      </div>
      <div class="text-center">
        <%= link_to "入力画面に戻る", root_path, class: "btn btn-info"%>
        <%= f.submit '送信する', :class => 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>